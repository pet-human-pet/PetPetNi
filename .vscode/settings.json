{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // 1. ESLint 設定：使用 explicit 比較穩，不會跟自動存檔打架
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // 2. 針對 Vue 檔案：強制使用 Prettier (防止隊友誤用 Volar 排版)
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // 3. 針對 JS 檔案：強制使用 Prettier
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // 4. 讓 Tailwind 也能在 CSS 檔運作
  "files.associations": {
    "*.css": "tailwindcss"
  }
}
